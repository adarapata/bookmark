<%= provide(:title, 'Sign n!') %>
<div class="sign">
  <h2>サインインしてください</h2>

  <%= form_for(:session, url: sessions_path) do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>

    <div class="actions">
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    </div>

  <% end %>
</div>
